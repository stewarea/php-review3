<!DOCTYPE html>
<html>
    <head>
      <meta charset="utf-8">
      <title>Salon Manager</title>
    </head>
    <body>

             <p> Stylist: <h1> {{ stylist.getName }}</h1>

        <h2> Clients of {{ stylist.getName }} </h2>
        {% if clients is not empty %}
            {% for client in clients %}

                    <li> {{ client.name }}></li>


                <form class="delete" action="/delete/{{client.id}}" method="post">
                    <input name="_method" type="hidden" value="delete">
                    <button class="btn btn-danger form-control delete" type="submit" name="button">Delete Client</button>
                 </form>
                 <form class="" action="/{{client.id}}/edit" method="post">
                     <label for="">Edit Client</label>
                     <input name="person" type="hidden" value="{{client.id}}">
                     <button class="form-control btn btn-success" type="submit" name="button">Submit</button>
                </form>

            {% endfor %}
        {% endif %}

        <h1> Add New Client </h1>
        <form action='/stylist/{{ stylist.getId }}' method='post'>
            <input type="hidden" name="stylist_id" value={{stylist.id}}>
            <label for='client'>Client Name:</label>
            <input type='text' id='client' name='client'>
            <button type='submit'>Submit</button>
        </form>
        <a href="/">Home</a>
  </body>
</html>
