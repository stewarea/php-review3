<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Salon Manager</title>
  </head>
  <body>
    <h1>Clients</h1>
        {% if clients is not empty %}
            {% for client in clients %}
                <p>
                    <a href="/clients/{{client.id}}"{{ client.name }}>
                </p>

                <form class="delete" action="/delete/{{client.id}}" method="post">
                    <input name="_method" type="hidden" value="delete">
                    <button class="btn btn-danger form-control delete" type="submit" name="button">Delete </button>
                 </form>
                 <form class="" action="/{{client.id}}/edit" method="post">
                     <label for="">Name</label>
                     <input name="person" type="hidden" value="{{client.id}}">
                     <input class="form-control" type="text" name="name" value="{{client.name}}">
                     <button class="form-control btn btn-success" type="submit" name="button">Submit</button>
                </form>
                <form action='/results' method='post'>
                    <label for='client'>Add New Stylist:</label>
                    <input type='text' id='client' name='client'>
                    <button type='submit'>Submit</button>
                </form>

            {% endfor %}
        {% endif %}
  </body>
</html>
